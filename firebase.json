{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [ { 
      "source": "**/fonts/**",
      "headers": [ { 
        "key": "Cache-Control",
        "value": "max-age=31104001"
      } ]
    }],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
